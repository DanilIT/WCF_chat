<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="585.647" Loaded="Winow_Loaded" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="98*"/>
            <RowDefinition Height="321*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="29" Margin="248,24,0,0" TextWrapping="Wrap" Text="User Name" VerticalAlignment="Top" Width="305"/>
        <Button x:Name="bConDiscon"  Click="Button_Click" Content="Connect" HorizontalAlignment="Left" Margin="24,24,0,0" VerticalAlignment="Top" Width="200" Height="29"/>
        <ListBox x:Name="IbChat" HorizontalAlignment="Left" Height="217" Margin="24,68,0,0" VerticalAlignment="Top" Width="529" Grid.RowSpan="2"/>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Height="77" Margin="24,209.079,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="529" Grid.Row="1" KeyDown="tbMessage_KeyDown"/>

    </Grid>
</Window>
